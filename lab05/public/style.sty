/*VARIABLES SECTION*/
/*includes font types and some colors*/
fonts = Helvetica, Arial, sans-serif
tan = #ffeebb
black = #222222
green = #dddd88
blue = #ccccff
gray = #999999

/*HTML STYLING, DESKTOP/DEFAULT VIEWS*/

/* sets default background color and font size + type for the whole page */
body
    font: 24px fonts
    background: gray

/* establishes default layout settings for nav, article, and aside */
body #main
    min-height: 800px
    margin: 0px
    padding: 0px
    display: flex
    flex-flow: row

/* article has a border, green background, and comes after nav */
body #main > article
    padding: 5px
    border: .15em solid black
    background: green
    flex: 3 1 60%
    order: 2


/*NOTE TO GRADER: This is where the settings for
 * "desktop" style is. If I wanted to right-align
 * for desktop, this is where I would do it.
 * I just can't figure out what the right
 * command is.
 */
 /* nav's font is bigger than article, has a black border,
  * blue background, and comes before article */
body #main > nav
    font-size: 1.2em
    align-items: flex-end
    padding: 5px
    border: .15em solid black
    background: blue
    flex: 1 6 20%
    order: 0
    justify-content end

/* aside has italic font, black border,
 * blue background, and comes after article */
body #main > aside
    padding: 5px
    border: .15em solid black
    background: blue
    flex: 1 6 20%
    order: 3
    font-style: italic
    align-items: stretch

/* header has large and bold font, a black border, and tan background */
body header
    font-size: 2em
    font-style: bold
    display: block
    padding: 5px
    min-height: 100px
    border: .15em solid black
    background: tan

/* footer has small font, a black border, and tan background */
body footer
    font-size: .7em
    display: block
    padding: 5px
    min-height: 100px
    border: .15em solid black
    background: tan

/*NARROW-WIDTH HTML STYLING (e.g. mobile devices, small window sizes)*/
/* Too narrow to support three columns */
@media all and (max-width: 640px)
    body #main, #page
        flex-direction: column

    body #main > nav, #main > article, #main > aside
    /* Return them to document order */
        order: 0

    /*NOTE TO GRADER: This is where the settings for
     * "mobile" style is. If I wanted to left-align
     * for mobile, this is where I would do it.
     * I just can't figure out what the right
     * command is.
     */
     /* nav has to come before aside, so its order is zero. */
    body #main > nav
      justify-content: start
      min-height: 50px
      max-height: 50px


    body #main > aside, header, footer
        min-height: 50px
        max-height: 50px
